<section id="collection" data-section="collection">
  {% assign settings = section.settings %}
  <script type="application/json" data-section-data>
    {   
      "handle": "{{collection.handle}}",
      "isAddBtn": {{settings.is_add_btn}},
      "isDescription": {{settings.is_description}},
      "banner": {{settings.banner}},
      "porudcts_per_page": {{settings.porudcts_per_page}}
    }
  </script>
</section>

{% schema %}
  {
    "name": "Collection settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "banner",
        "label": "Banner Enable/Disable",
        "default": true
      }, {
        "type": "checkbox",
        "id": "is_add_btn",
        "label": "Add to cart button on cards Enable/Disable",
        "default": true
      }, {
        "type": "checkbox",
        "id": "is_description",
        "label": "Description Enable/Disable",
        "default": false
      },
      {
        "type": "number",
        "id": "porudcts_per_page",
        "label": "Number of products per page",
        "default": 20
      }
    ]
  }
{% endschema %}