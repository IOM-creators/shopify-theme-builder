<section id="collection" data-section="collection">
  {% assign settings = section.settings %}
  <script type="application/json" data-section-data>
    {   
      "all_products_count": "{{collection.all_products_count}}",
      "handle": "{{collection.handle}}",
      "is_add_btn": {{settings.is_add_btn}},
      "type_pagination": "{{settings.type_pagination}}",
      "is_description": {{settings.is_description}},
      "banner": {{settings.banner}},
      "porudcts_per_page": {{settings.porudcts_per_page}}
    }
  </script>
</section>

{% schema %}
  {
    "name": "Collection settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "banner",
        "label": "Banner Enable/Disable",
        "default": false
      }, {
        "type": "checkbox",
        "id": "is_add_btn",
        "label": "Add to cart button on cards Enable/Disable",
        "default": true
      }, {
        "type": "checkbox",
        "id": "is_description",
        "label": "Description Enable/Disable",
        "default": false
      },
      {
        "type": "radio",
        "id": "type_pagination",
        "label": "Type pagination",
        "options": [
          {
            "value": "load_more",
            "label": "Load More"
          },
          {
            "value": "numbers",
            "label": "Numbers"
          }
        ],
        "default": "load_more"
      },
      {
        "type": "number",
        "id": "porudcts_per_page",
        "label": "Products per page",
        "default": 3
      }
    ]
  }
{% endschema %}