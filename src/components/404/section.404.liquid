{%- liquid
  assign icon = section.settings.icon
  assign cta_color = 'button-' | append: section.settings.cta_color
  assign section_cta_link = section.settings.cta_link
  assign section_cta_text = section.settings.cta_text
  assign eyebrow = section.settings.eyebrow
  assign heading = section.settings.heading
  assign description = section.settings.description
-%}

<section data-section="404" class="container pt-[25px] pb-[23px] text-center lg:py-[42px]">
  <script type="application/json" data-section-data>
    {}
  </script>
  <div class="max-w-[999px] mx-auto">
    {% if icon != blank %}
      <div class="w-[100px] aspect-auto mx-auto mb-[10px] lg:mb-[15px]">
        {{
          icon | image_url: width: icon.width | image_tag: loading: 'lazy', width: icon.width, height: icon.height, widths: '100'
        }}
      </div>
    {% endif %}
    {% if eyebrow != blank %}
      <h1 class="mb-[10px] text-supergoop-blue text-[16px] leading-tight tracking-[2px] font-semibold font-sans lg:mb-[15px]">
        {{ eyebrow }}
      </h1>
    {% endif %}
    {% if heading != blank %}
      <h2 class="mb-[10px] text-supergoop-blue text-[46px] lg:mb-[15px] lg:text-[80px]">{{ heading }}</h2>
    {% endif %}
    {% if description != blank %}
      <p class="mx-auto mb-[15px] text-grey-2A font-sans text-[14px] leading-[1.42] lg:mb-[20px] lg:text-[20px] lg:leading-[1.3] max-w-[505px]">
        {{ description }}
      </p>
    {% endif %}
    {% if section_cta_link != blank and section_cta_text != blank %}
      <a href="{{ section_cta_link }}" class="button {{ cta_color }} no-underline px-[60px]">
        {{ section_cta_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "404",
    "settings": [
      {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
      },
      {
        "type": "text",
        "id": "eyebrow",
        "label": "Eyebrow",
        "default": "404 error"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Headline",
        "default": "OOPS!"
      },
      {
        "type": "inline_richtext",
        "id": "description",
        "default": "We can't seem to find the page you were looking for. We apologize for the inconvenience.",
        "label": "Description"
      }, {
        "type": "select",
        "id": "cta_color",
        "label": "CTA Color",
        "options": [
          {
            "value": "primary",
            "label": "Primary"
          }, {
            "value": "secondary",
            "label": "Secondary"
          }
        ],
        "default": "primary"
      }, {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
      }, {
        "type": "text",
        "id": "cta_text",
        "default": "Return to homepage",
        "label": "CTA Text"
      }
    ]
  }
{% endschema %}